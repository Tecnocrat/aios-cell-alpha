    <div class="notification" id="notification"></div>

    <!-- JavaScript -->
    <script src="js/aios-client.js"></script>
    <script>
        // Additional demonstration functions
        let realTimeMonitoring = false;
        let realTimeInterval;

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            showNotification('AIOS Interface Loading...', 'info');
            
            // Set up event listeners
            setupEventListeners();
            
            // Update status every few seconds
            setInterval(updateConnectionStatus, 5000);
        });

        function setupEventListeners() {
            // Listen for AIOS client events
            if (window.aiosClient) {
                aiosClient.on('initialized', (data) => {
                    showNotification('AIOS Client Initialized', 'success');
                    document.getElementById('system-status').textContent = 'Online';
                    document.getElementById('system-status').className = 'status-indicator healthy';
                });

                aiosClient.on('systemAlert', (data) => {
                    showNotification(`System Alert: ${data.message}`, 'warning');
                    addRealTimeEvent('System Alert', data);
                });

                aiosClient.on('healthUpdate', (data) => {
                    updateRealTimeIndicator();
                });

                aiosClient.on('aiResponse', (data) => {
                    addRealTimeEvent('AI Response', data);
                });

                aiosClient.on('dataUpdate', (data) => {
                    addRealTimeEvent('Data Update', data);
                });
            }
        }

        async function makePrediction() {
            showLoading(true);
            try {
                const sampleData = {
                    features: [1.2, 3.4, 5.6, 7.8],
                    context: 'system_performance_prediction'
                };
                
                const result = await aiosClient.makePrediction(sampleData, 'performance');
                document.getElementById('ai-response').textContent = JSON.stringify(result, null, 2);
                showNotification('AI Prediction Complete', 'success');
            } catch (error) {
                document.getElementById('ai-response').textContent = `Error: ${error.message}`;
                showNotification('Prediction Failed', 'error');
            } finally {
                showLoading(false);
            }
        }

        async function runAutomation() {
            showLoading(true);
            try {
                const task = {
                    type: 'system_maintenance',
                    actions: ['clean_temp_files', 'update_indices', 'optimize_database']
                };
                
                const result = await aiosClient.runAutomation(task);
                document.getElementById('ai-response').textContent = JSON.stringify(result, null, 2);
                showNotification('Automation Complete', 'success');
            } catch (error) {
                document.getElementById('ai-response').textContent = `Error: ${error.message}`;
                showNotification('Automation Failed', 'error');
            } finally {
                showLoading(false);
            }
        }

        async function querySystemLogs() {
            showLoading(true);
            try {
                const result = await aiosClient.queryDatabase(
                    'SELECT * FROM system_logs WHERE level = @level ORDER BY timestamp DESC LIMIT 10',
                    { level: 'ERROR' }
                );
                document.getElementById('db-result').textContent = JSON.stringify(result, null, 2);
                showNotification('System Logs Retrieved', 'success');
            } catch (error) {
                document.getElementById('db-result').textContent = `Error: ${error.message}`;
                showNotification('Query Failed', 'error');
            } finally {
                showLoading(false);
            }
        }

        async function analyzeData() {
            showLoading(true);
            try {
                const result = await aiosClient.executeIntelligentQuery(
                    'Analyze system performance trends over the last 24 hours and identify any anomalies'
                );
                document.getElementById('db-result').textContent = JSON.stringify(result, null, 2);
                showNotification('Data Analysis Complete', 'success');
            } catch (error) {
                document.getElementById('db-result').textContent = `Error: ${error.message}`;
                showNotification('Analysis Failed', 'error');
            } finally {
                showLoading(false);
            }
        }

        async function processCustomAINLP() {
            const input = document.getElementById('ainlp-input').value.trim();
            if (!input) {
                showNotification('Please enter an AINLP command', 'warning');
                return;
            }

            showLoading(true);
            try {
                const result = await aiosClient.processAINLPCommand(input);
                document.getElementById('ainlp-result').innerHTML = `
                    <h5>AINLP Processing Result:</h5>
                    <p><strong>Command:</strong> ${input}</p>
                    <p><strong>Status:</strong> ${result.compiled ? 'Success' : 'Failed'}</p>
                    <p><strong>Output:</strong> ${JSON.stringify(result, null, 2)}</p>
                `;
                showNotification('AINLP Command Processed', 'success');
            } catch (error) {
                document.getElementById('ainlp-result').textContent = `Error: ${error.message}`;
                showNotification('AINLP Processing Failed', 'error');
            } finally {
                showLoading(false);
            }
        }

        function toggleChatInterface() {
            const chatInterface = document.getElementById('chat-interface');
            chatInterface.style.display = chatInterface.style.display === 'none' ? 'block' : 'none';
        }

        function handleChatInput(event) {
            if (event.key === 'Enter') {
                const input = event.target.value.trim();
                if (input) {
                    addChatMessage('You', input);
                    processChatMessage(input);
                    event.target.value = '';
                }
            }
        }

        function addChatMessage(sender, message) {
            const messagesContainer = document.getElementById('chat-messages');
            const messageElement = document.createElement('div');
            messageElement.innerHTML = `
                <div style="margin-bottom: 10px;">
                    <strong>${sender}:</strong> ${message}
                    <div style="font-size: 10px; color: #999;">${new Date().toLocaleTimeString()}</div>
                </div>
            `;
            messagesContainer.appendChild(messageElement);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        async function processChatMessage(message) {
            try {
                const response = await aiosClient.processNLP(message, { 
                    context: 'chat_interface',
                    expectResponse: true 
                });
                addChatMessage('AIOS', response.response || 'Processing complete');
            } catch (error) {
                addChatMessage('AIOS', `Error: ${error.message}`);
            }
        }

        function showSystemHealth() {
            const healthData = aiosClient.systemHealth;
            if (healthData) {
                document.getElementById('ai-response').textContent = JSON.stringify(healthData, null, 2);
                showNotification('System Health Retrieved', 'success');
            } else {
                showNotification('System Health Not Available', 'warning');
            }
        }

        function toggleRealTimeMode() {
            realTimeMonitoring = !realTimeMonitoring;
            if (realTimeMonitoring) {
                startRealTimeMonitoring();
            } else {
                stopRealTimeMonitoring();
            }
        }

        function startRealTimeMonitoring() {
            realTimeMonitoring = true;
            realTimeInterval = setInterval(updateRealTimeData, 2000);
            document.getElementById('real-time-indicator').textContent = ' Real-time Active';
            showNotification('Real-time Monitoring Started', 'info');
        }

        function stopRealTimeMonitoring() {
            realTimeMonitoring = false;
            if (realTimeInterval) {
                clearInterval(realTimeInterval);
            }
            document.getElementById('real-time-indicator').textContent = '';
            showNotification('Real-time Monitoring Stopped', 'info');
        }

        function updateRealTimeData() {
            if (realTimeMonitoring) {
                // Simulate real-time data updates
                const timestamp = new Date().toLocaleTimeString();
                addRealTimeEvent('System Update', {
                    timestamp: timestamp,
                    type: 'heartbeat',
                    data: { cpu: Math.random() * 100, memory: Math.random() * 100 }
                });
            }
        }

        function addRealTimeEvent(type, data) {
            const eventsContainer = document.getElementById('real-time-events');
            if (eventsContainer) {
                const event = document.createElement('div');
                event.style.marginBottom = '10px';
                event.style.padding = '5px';
                event.style.background = 'rgba(0, 212, 255, 0.1)';
                event.style.borderRadius = '3px';
                event.innerHTML = `
                    <strong>[${new Date().toLocaleTimeString()}] ${type}:</strong><br>
                    ${JSON.stringify(data, null, 2)}
                `;
                eventsContainer.appendChild(event);
                eventsContainer.scrollTop = eventsContainer.scrollHeight;
                
                // Keep only last 10 events
                while (eventsContainer.children.length > 10) {
                    eventsContainer.removeChild(eventsContainer.firstChild);
                }
            }
        }

        function triggerTestEvent() {
            addRealTimeEvent('Test Event', {
                message: 'This is a test event triggered from the UI',
                timestamp: new Date().toISOString(),
                data: { test: true, value: Math.random() }
            });
        }

        function updateRealTimeIndicator() {
            const indicator = document.getElementById('real-time-indicator');
            if (indicator && realTimeMonitoring) {
                indicator.textContent = ' Real-time Active ';
                setTimeout(() => {
                    indicator.textContent = ' Real-time Active';
                }, 200);
            }
        }

        function updateConnectionStatus() {
            // This would normally check the actual connection status
            // For demo purposes, we'll just update the timestamp
            const statusElement = document.querySelector('.connection-status span');
            if (statusElement) {
                statusElement.textContent = `Connected to AIOS Backend (${new Date().toLocaleTimeString()})`;
            }
        }

        function showLoading(show) {
            const loadingIndicator = document.getElementById('loading-indicator');
            loadingIndicator.style.display = show ? 'flex' : 'none';
        }

        function showNotification(message, type = 'info') {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.className = `notification ${type}`;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // Initialize real-time updates
        setTimeout(() => {
            updateRealTimeIndicator();
        }, 1000);
    </script>
</body>
</html>

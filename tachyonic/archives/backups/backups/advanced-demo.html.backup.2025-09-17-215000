            <div class="system-info">
                <div class="health-metrics">
                    <div class="metric">
                        <div class="metric-value" id="cpu-usage">0%</div>
                        <div>CPU</div>
                    </div>
                    <div class="metric">
                        <div class="metric-value" id="memory-usage">0%</div>
                        <div>Memory</div>
                    </div>
                    <div class="metric">
                        <div class="metric-value" id="ai-status">0</div>
                        <div>AI Modules</div>
                    </div>
                </div>
                <div class="status-indicator" id="system-status">Initializing</div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="sidebar">
            <h3> AI Modules</h3>
            <button class="module-button" onclick="demonstrateAI()">
                <span></span> Natural Language Processing
            </button>
            <button class="module-button" onclick="demonstrateDatabase()">
                <span></span> Intelligent Database
            </button>
            <button class="module-button" onclick="demonstrateAINLP()">
                <span></span> AINLP Compiler
            </button>
            <button class="module-button" onclick="toggleChatInterface()">
                <span></span> AI Chat Interface
            </button>
            <button class="module-button" onclick="showSystemHealth()">
                <span></span> System Health
            </button>
            <button class="module-button" onclick="toggleRealTimeMode()">
                <span></span> Real-time Mode
            </button>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="content-header">

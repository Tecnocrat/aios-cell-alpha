<body>
    <div class="header">
        <h1> AIOS Maintenance Center</h1>
        <p>Fractal/Holographic Development Environment - Maintenance Operations</p>
    </div>

    <div class="container">
        <!-- System Status Panel -->
        <div class="panel">
            <h2> System Status</h2>
            <div class="status-grid">
                <div class="status-item">
                    <div class="status-value" id="health-score">--</div>
                    <div class="status-label">System Health</div>
                </div>
                <div class="status-item">
                    <div class="status-value" id="fragmentation-score">--</div>
                    <div class="status-label">Doc Fragmentation</div>
                </div>
                <div class="status-item">
                    <div class="status-value" id="backup-status">--</div>
                    <div class="status-label">Backup System</div>
                </div>
                <div class="status-item">
                    <div class="status-value" id="archive-status">--</div>
                    <div class="status-label">Tachyonic Archive</div>
                </div>
            </div>
            <div class="progress-bar">
                <div class="progress-fill" id="overall-progress"></div>
            </div>
        </div>

        <!-- Maintenance Operations Panel -->
        <div class="panel">
            <h2> Maintenance Operations</h2>
            <button class="operation-button" onclick="optimizeDocumentation()">
                 Optimize Documentation
            </button>
            <button class="operation-button" onclick="consolidateBackups()">
                 Consolidate Backups
            </button>
            <button class="operation-button" onclick="runGarbageCollection()">
                 Run Garbage Collection
            </button>
            <button class="operation-button" onclick="runComprehensiveMaintenance()">
                 Comprehensive Maintenance
            </button>
        </div>

        <!-- Natural Language Commands Panel -->
        <div class="panel">
            <h2> Natural Language Commands</h2>
            <input type="text" class="nl-command" id="nl-input"
                placeholder="Enter maintenance command in natural language...">
            <button class="operation-button" onclick="processNaturalLanguageCommand()">
                 Execute Command
            </button>
            <div class="log-output" id="nl-output">
                <div class="log-entry info"> Try commands like:</div>
                <div class="log-entry">• "Clean up documentation and optimize structure"</div>
                <div class="log-entry">• "Archive old backup files using tachyonic system"</div>
                <div class="log-entry">• "Run complete maintenance with garbage collection"</div>
            </div>
        </div>

        <!-- Activity Log Panel -->
        <div class="panel">
            <h2> Activity Log</h2>
            <div class="log-output" id="activity-log">
                <div class="log-entry info"> AIOS Maintenance Center initialized</div>
                <div class="log-entry info"> Connecting to maintenance services...</div>
            </div>
        </div>
    </div>

    <script>
        // AIOS Maintenance Center JavaScript API
        class AIOSMaintenanceCenter {
            constructor() {
                this.maintenanceService = null;
                this.isInitialized = false;
                this.init();
            }

            async init() {
                try {
                    // Connect to C# maintenance service through WebView2
                    this.maintenanceService = window.chrome?.webview?.hostObjects?.maintenanceService;

                    if (this.maintenanceService) {
                        this.log(' Connected to AIOS Maintenance Service', 'success');
                        await this.refreshStatus();
                        this.isInitialized = true;
                    } else {
                        this.log(' Maintenance service not available - running in demo mode', 'info');
                        this.loadDemoData();
                    }
                } catch (error) {
                    this.log(` Initialization error: ${error.message}`, 'error');
                    this.loadDemoData();
                }
            }

            async refreshStatus() {
                try {
                    this.log(' Refreshing system status...', 'info');

                    if (this.maintenanceService) {
                        const status = await this.maintenanceService.GetMaintenanceStatusAsync();
                        this.updateStatusDisplay(status);
                    } else {
                        this.loadDemoData();
                    }
                } catch (error) {
                    this.log(` Failed to refresh status: ${error.message}`, 'error');
                }
            }

            updateStatusDisplay(status) {
                if (status.Error) {
                    this.log(` Status error: ${status.Error}`, 'error');
                    return;
                }

                // Update status values
                document.getElementById('health-score').textContent =
                    (status.SystemHealth?.OverallScore * 100).toFixed(1) + '%';

                document.getElementById('fragmentation-score').textContent =
                    (status.DocumentationFragmentation * 100).toFixed(1) + '%';

                document.getElementById('backup-status').textContent =
                    status.BackupSystemStatus?.IsOperational ? '' : '';

                document.getElementById('archive-status').textContent =
                    status.TachyonicArchiveStatus?.IsOperational ? '' : '';

                // Update progress bar
                const overallProgress = status.SystemHealth?.OverallScore * 100;
                document.getElementById('overall-progress').style.width = `${overallProgress}%`;

                this.log(' Status updated successfully', 'success');
            }

            loadDemoData() {
                // Demo data for when service is not available
                document.getElementById('health-score').textContent = '95.0%';
                document.getElementById('fragmentation-score').textContent = '0.0%';
                document.getElementById('backup-status').textContent = '';
                document.getElementById('archive-status').textContent = '';
                document.getElementById('overall-progress').style.width = '95%';

                this.log(' Demo data loaded', 'info');
            }

            async executeOperation(operationName, parameters = null) {
                try {
                    this.log(` Executing: ${operationName}`, 'info');
                    this.setButtonsDisabled(true);

                    let result;
                    if (this.maintenanceService) {
                        switch (operationName) {
                            case 'optimize_documentation':
                                result = await this.maintenanceService.OptimizeDocumentationAsync(parameters);
                                break;
                            case 'consolidate_backups':
                                result = await this.maintenanceService.ConsolidateBackupsAsync(parameters);
                                break;
                            case 'garbage_collection':
                                result = await this.maintenanceService.RunGarbageCollectionAsync(true);
                                break;
                            case 'comprehensive_maintenance':
                                result = await this.maintenanceService.RunComprehensiveMaintenanceAsync();
                                break;
                            case 'natural_language':
                                result = await this.maintenanceService.ProcessNaturalLanguageCommandAsync(parameters);
                                break;
                            default:
                                throw new Error(`Unknown operation: ${operationName}`);
                        }
                    } else {
                        // Demo mode
                        result = {
                            Success: true,
                            Message: `Demo: ${operationName} completed successfully`,
                            Data: { demo: true }
                        };
                        await this.delay(2000); // Simulate processing time
                    }

                    if (result.Success) {
                        this.log(` ${operationName}: ${result.Message || 'Completed successfully'}`, 'success');
                    } else {
                        this.log(` ${operationName}: ${result.Error || 'Operation failed'}`, 'error');
                    }

                    // Refresh status after operation
                    await this.refreshStatus();

                } catch (error) {
                    this.log(` ${operationName} failed: ${error.message}`, 'error');
                } finally {
                    this.setButtonsDisabled(false);
                }
            }

            setButtonsDisabled(disabled) {
                const buttons = document.querySelectorAll('.operation-button');
                buttons.forEach(button => {
                    button.disabled = disabled;
                    if (disabled) {
                        button.classList.add('loading');
                    } else {
                        button.classList.remove('loading');
                    }
                });
            }

            log(message, type = 'info') {
                const logEntry = document.createElement('div');
                logEntry.className = `log-entry ${type}`;
                logEntry.textContent = `${new Date().toLocaleTimeString()} - ${message}`;

                const activityLog = document.getElementById('activity-log');
                activityLog.appendChild(logEntry);
                activityLog.scrollTop = activityLog.scrollHeight;

                console.log(`[AIOS Maintenance] ${message}`);
            }

            delay(ms) {
                return new Promise(resolve => setTimeout(resolve, ms));
            }
        }

        // Global maintenance center instance
        let maintenanceCenter;

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', () => {
            maintenanceCenter = new AIOSMaintenanceCenter();
        });

        // Operation functions called by buttons
        async function optimizeDocumentation() {
            await maintenanceCenter.executeOperation('optimize_documentation');
        }

        async function consolidateBackups() {
            await maintenanceCenter.executeOperation('consolidate_backups');
        }

        async function runGarbageCollection() {
            await maintenanceCenter.executeOperation('garbage_collection');
        }

        async function runComprehensiveMaintenance() {
            await maintenanceCenter.executeOperation('comprehensive_maintenance');
        }

        async function processNaturalLanguageCommand() {
            const input = document.getElementById('nl-input');
            const command = input.value.trim();

            if (!command) {
                maintenanceCenter.log(' Please enter a command', 'info');
                return;
            }

            // Log the command to NL output
            const nlOutput = document.getElementById('nl-output');
            const commandEntry = document.createElement('div');
            commandEntry.className = 'log-entry info';
            commandEntry.textContent = ` Command: ${command}`;
            nlOutput.appendChild(commandEntry);
            nlOutput.scrollTop = nlOutput.scrollHeight;

            await maintenanceCenter.executeOperation('natural_language', command);

            input.value = ''; // Clear input
        }

        // Handle Enter key in natural language input
        document.addEventListener('DOMContentLoaded', () => {
            const nlInput = document.getElementById('nl-input');
            nlInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    processNaturalLanguageCommand();
                }
            });
        });

        // Auto-refresh status every 30 seconds
        setInterval(() => {
            if (maintenanceCenter && maintenanceCenter.isInitialized) {
                maintenanceCenter.refreshStatus();
            }
        }, 30000);
    </script>
</body>

</html>

<Window x:Class="AIOS.UI.CompleteHybridWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AIOS - Complete Hybrid Interface Integration" 
        Height="900" Width="1600"
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E"
        Icon="pack://application:,,,/Resources/aios-icon.ico">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="AIOS" FontSize="28" FontWeight="Bold" 
                              Foreground="#FF00D4FF" Margin="0,0,15,0"/>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="Complete Hybrid Interface Integration" 
                                  FontSize="18" Foreground="#FFCCCCCC" FontWeight="SemiBold"/>
                        <TextBlock Text="HTML5 + C# + WebView2 + AI Services" 
                                  FontSize="12" Foreground="#FF999999"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#FF28A745" CornerRadius="15" Padding="12,6" Margin="5,0">
                        <TextBlock Text="HYBRID ACTIVE" 
                                  Foreground="White" FontWeight="Bold" FontSize="11"/>
                    </Border>
                    <Border Background="#FF007ACC" CornerRadius="15" Padding="12,6" Margin="5,0">
                        <TextBlock Text="AI ENABLED" 
                                  Foreground="White" FontWeight="Bold" FontSize="11"/>
                    </Border>
                    <Button Content="⚙️" Background="Transparent" Foreground="#FFCCCCCC"
                           BorderThickness="0" FontSize="20" 
                           Width="40" Height="40" Margin="10,0,0,0"
                           ToolTip="Settings"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- WebView2 Container -->
            <Border Background="#FF2D2D30" CornerRadius="8" Padding="5">
                <Grid Name="MainContainer">
                    <!-- WebView2 will be added here programmatically -->
                    
                    <!-- Loading overlay -->
                    <Grid Name="LoadingOverlay" Background="Transparent" Visibility="Visible">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ProgressBar Width="300" Height="4" IsIndeterminate="True" 
                                       Foreground="#FF00D4FF" Background="Transparent"/>
                            <TextBlock Text="Initializing AIOS Hybrid Interface..." 
                                     FontSize="16" Foreground="#FFCCCCCC" 
                                     HorizontalAlignment="Center" Margin="0,15,0,0"/>
                            <TextBlock Text="Loading AI services, WebView2 integration, and HTML5 interface..." 
                                     FontSize="12" Foreground="#FF999999" 
                                     HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Error fallback -->
                    <Border Name="ErrorFallback" Background="#FF2D2D30" 
                           Visibility="Collapsed" Padding="40">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="⚠️" FontSize="48" Foreground="#FFFFC107" 
                                     HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="WebView2 Integration Error" 
                                     FontSize="24" Foreground="#FFFFC107" 
                                     HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="The hybrid interface could not be loaded." 
                                     FontSize="16" Foreground="#FFCCCCCC" 
                                     HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBlock Text="Please ensure WebView2 runtime is installed and try again." 
                                     FontSize="14" Foreground="#FF999999" 
                                     HorizontalAlignment="Center" Margin="0,5,0,20"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Retry" Background="#FF007ACC" Foreground="White"
                                       BorderThickness="0" Padding="15,8" Margin="5"
                                       Click="RetryButton_Click" FontSize="14"/>
                                <Button Content="Use Traditional Interface" Background="#FF6C757D" 
                                       Foreground="White" BorderThickness="0" Padding="15,8" Margin="5"
                                       Click="FallbackButton_Click" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#FF2D2D30" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Name="StatusText" Text="Initializing AIOS Hybrid Interface..." 
                              FontSize="12" Foreground="#FFCCCCCC" VerticalAlignment="Center"/>
                    <Rectangle Width="8" Height="8" Fill="#FF28A745" 
                             Margin="10,0,0,0" VerticalAlignment="Center">
                        <Rectangle.OpacityMask>
                            <RadialGradientBrush>
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="WebView2" FontSize="10" Foreground="#FF999999" 
                              VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Rectangle Width="6" Height="6" Fill="#FF00D4FF" 
                             VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <TextBlock Text="AI Services" FontSize="10" Foreground="#FF999999" 
                              VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Rectangle Width="6" Height="6" Fill="#FF00D4FF" 
                             VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <TextBlock Text="Database" FontSize="10" Foreground="#FF999999" 
                              VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Rectangle Width="6" Height="6" Fill="#FF00D4FF" 
                             VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <TextBlock Text="v2.0.0" FontSize="10" Foreground="#FF666666" 
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
    
    <!-- Window Events -->
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseCommand_Executed"/>
    </Window.CommandBindings>
    
    <Window.InputBindings>
        <KeyBinding Key="F5" Command="ApplicationCommands.Undo"/>
        <KeyBinding Key="F12" Command="ApplicationCommands.Find"/>
    </Window.InputBindings>
</Window>

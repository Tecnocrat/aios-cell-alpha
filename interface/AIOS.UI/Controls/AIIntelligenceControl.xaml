<UserControl x:Class="AIOS.UI.Controls.AIIntelligenceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Unloaded="OnUnloaded">
    
    <UserControl.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FFF5F5F5">
        <!-- Loading Panel -->
        <Grid x:Name="LoadingPanel" Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,10"/>
                <TextBlock Text="Initializing AI Intelligence..." FontSize="14" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer x:Name="MainContent" Visibility="Collapsed">
            <StackPanel Margin="20">
                <!-- Header -->
                <Border Background="#FF007ACC" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ§¬ AIOS AI Intelligence Control" Foreground="White" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="Connected through Cytoplasm UI Bridge" Foreground="White" FontSize="12" Opacity="0.8"/>
                    </StackPanel>
                </Border>

                <!-- System Status -->
                <GroupBox Header="System Status" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="Health Status:" Grid.Column="0" Margin="0,0,10,0"/>
                        <TextBlock x:Name="HealthStatusText" Text="Checking..." Grid.Column="1" Style="{StaticResource StatusTextStyle}"/>
                    </Grid>
                </GroupBox>

                <!-- Available Functions -->
                <GroupBox Header="Available AI Functions" Margin="0,0,0,20">
                    <ListBox x:Name="FunctionsListBox" Height="150" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Width="200"/>
                                    <TextBlock Text="{Binding Category}" Foreground="Blue" Width="150"/>
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Width="300"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>

                <!-- Main AI Operations -->
                <GroupBox Header="AI Intelligence Operations" Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Visual Intelligence -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Button x:Name="ProcessVisualIntelligenceButton" Content="Process Visual Intelligence" 
                                       Style="{StaticResource ActionButtonStyle}" Click="ProcessVisualIntelligenceButton_Click"/>
                                <CheckBox x:Name="EnhancedAnalysisCheckBox" Content="Enhanced Analysis" 
                                         VerticalAlignment="Center" Margin="10,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Consciousness Analysis -->
                        <Button x:Name="AnalyzeConsciousnessButton" Content="Analyze Consciousness Patterns" 
                               Style="{StaticResource ActionButtonStyle}" Click="AnalyzeConsciousnessButton_Click"/>

                        <!-- Enhanced Analysis -->
                        <Button x:Name="EnhancedAnalysisButton" Content="Enhanced Visual Analysis (Cellular)" 
                               Style="{StaticResource ActionButtonStyle}" Click="EnhancedAnalysisButton_Click"/>
                    </StackPanel>
                </GroupBox>

                <!-- Real-time Monitoring -->
                <GroupBox Header="Real-time Monitoring" Margin="0,0,0,20">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Interval (seconds):" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="IntervalTextBox" Text="30" Grid.Column="1" VerticalAlignment="Center"/>
                            <Button x:Name="RealTimeToggleButton" Content="Start Real-time" Grid.Column="2" 
                                   Style="{StaticResource ActionButtonStyle}" Click="RealTimeToggleButton_Click"/>
                            
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Status:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                                <TextBlock x:Name="RealTimeStatusText" Text="Stopped" Style="{StaticResource StatusTextStyle}" Foreground="Gray"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Session Management -->
                <GroupBox Header="Session Management" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="150"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Button x:Name="CreateSessionButton" Content="Create Session" 
                                   Style="{StaticResource ActionButtonStyle}" Click="CreateSessionButton_Click"/>
                            <Button x:Name="RefreshSessionsButton" Content="Refresh" 
                                   Style="{StaticResource ActionButtonStyle}" Click="RefreshSessionsButton_Click"/>
                            
                            <TextBlock Text="Active Sessions:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                            <TextBlock x:Name="SessionCountText" Text="0" Style="{StaticResource StatusTextStyle}"/>
                        </StackPanel>
                        
                        <ListBox x:Name="SessionsListBox" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                    </Grid>
                </GroupBox>

                <!-- Data Export -->
                <GroupBox Header="Data Export" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Format:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="FormatComboBox" Width="100" SelectedIndex="0">
                            <ComboBoxItem Content="JSON"/>
                            <ComboBoxItem Content="TXT"/>
                        </ComboBox>
                        
                        <Button x:Name="ExportDataButton" Content="Export Analysis Data" 
                               Style="{StaticResource ActionButtonStyle}" Click="ExportDataButton_Click"/>
                    </StackPanel>
                </GroupBox>

                <!-- Debug Information -->
                <GroupBox Header="Debug Information">
                    <Button x:Name="GetDebugInfoButton" Content="Get Debug Information" 
                           Style="{StaticResource ActionButtonStyle}" Click="GetDebugInfoButton_Click"/>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
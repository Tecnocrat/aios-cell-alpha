<Window x:Class="AIOS.UI.MaintenanceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" mc:Ignorable="d" Title="AIOS Maintenance Center - Tachyonic Documentation &amp; System Optimization" Height="800" Width="1400" MinHeight="600" MinWidth="1000" WindowStartupLocation="CenterOwner" Background="#FF1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ”§" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="AIOS Maintenance Center" FontSize="20" FontWeight="Bold" Foreground="#FF00D4FF" Margin="0,0,15,0"/>
                    <TextBlock Text="Tachyonic Documentation &amp; System Optimization" FontSize="14" Foreground="#FFCCCCCC" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Name="MaintenanceStatusBorder" Background="#FF007ACC" CornerRadius="12" Padding="8,4" Margin="5,0">
                        <TextBlock Name="MaintenanceStatusText" Text="INITIALIZING" Foreground="White" FontWeight="Bold" FontSize="12"/>
                    </Border>
                    <Button Name="RefreshButton" Content="ðŸ”„" Background="Transparent" Foreground="#FFCCCCCC" BorderThickness="0" FontSize="16" Width="35" Height="35" Margin="10,0,5,0" Click="RefreshButton_Click" ToolTip="Refresh maintenance status"/>
                    <Button Name="CloseButton" Content="âœ•" Background="Transparent" Foreground="#FFCCCCCC" BorderThickness="0" FontSize="16" Width="35" Height="35" Margin="5,0,0,0" Click="CloseButton_Click" ToolTip="Close maintenance center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content - WebView2 -->
        <Border Grid.Row="1" Background="#FF2D2D30" Margin="10">
            <Grid>
                <!-- Loading indicator -->
                <StackPanel Name="LoadingPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible">
                    <TextBlock Text="ðŸ”§" FontSize="48" HorizontalAlignment="Center" Foreground="#FF00D4FF" Margin="0,0,0,20"/>
                    <TextBlock Text="Initializing Maintenance Center..." FontSize="18" HorizontalAlignment="Center" Foreground="#FFCCCCCC" Margin="0,0,0,10"/>
                    <ProgressBar Name="LoadingProgress" Width="300" Height="4" Background="#FF404040" Foreground="#FF00D4FF" IsIndeterminate="True"/>
                </StackPanel>

                <!-- WebView2 Control -->
                <wv2:WebView2 Name="MaintenanceWebView" Visibility="Collapsed" NavigationCompleted="MaintenanceWebView_NavigationCompleted"/>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF2D2D30" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Name="MaintenanceInfoText" Text="Maintenance system ready - All operations preserve historical data via tachyonic archival" Foreground="#FFCCCCCC" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Name="LastUpdateText" Text="Last Update: Never" Foreground="#FF888888" FontSize="11" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Name="QuickOptimizeButton" Content="âš¡ Quick Optimize" Background="#FF007ACC" Foreground="White" BorderThickness="0" Padding="12,6" Click="QuickOptimizeButton_Click" ToolTip="Run quick documentation optimization"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

<Window x:Class="AIOS.UI.FileExplorerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AIOS.UI" mc:Ignorable="d"
    Title="AIOS File Explorer - Code Quality Hub" Height="800" Width="1200"
    MinHeight="600" MinWidth="800" WindowStartupLocation="CenterScreen"
    Background="#FF1E1E1E" Icon="/AIOS.UI;component/Resources/folder.ico">

    <Window.Resources>
        <Style x:Key="FileItemStyle" TargetType="Border">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="FileButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E42"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E42"/>
                    <Setter Property="Foreground" Value="#FFFFFFFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ“" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="AIOS File Explorer" FontSize="20" FontWeight="Bold" Foreground="#FF00D4FF" VerticalAlignment="Center"/>
                    <TextBlock Name="ConnectionStatus" Text="ðŸ”— Connected" Foreground="#FF00FF00" FontSize="14" VerticalAlignment="Center" Margin="20,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Name="RefreshButton" Content="ðŸ”„ Refresh" Background="#FF007ACC" Foreground="White" BorderThickness="0" FontSize="12" Padding="10,5" Margin="5,0" Click="RefreshButton_Click"/>
                    <Button Name="SettingsButton" Content="âš™" Background="Transparent" Foreground="#FFCCCCCC" BorderThickness="0" FontSize="18" Width="35" Height="35" Margin="10,0,0,0" Click="SettingsButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Directory Tree -->
            <Border Grid.Column="0" Background="#FF2D2D30" CornerRadius="8" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Directory Structure" FontSize="16" FontWeight="Bold" Foreground="#FF00D4FF" Margin="15,15,15,10"/>

                    <TreeView Grid.Row="1" Name="DirectoryTreeView" Background="Transparent" Foreground="#FFCCCCCC" BorderThickness="0" Margin="15,0,15,10" SelectedItemChanged="DirectoryTreeView_SelectedItemChanged">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding SubDirectories}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Icon}" FontSize="12" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Name}" FontSize="12"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>

                    <Border Grid.Row="2" Background="#FF3E3E42" Padding="10" Margin="10">
                        <StackPanel>
                            <TextBlock Text="Quick Navigation" FontSize="12" FontWeight="Bold" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                            <Button Name="GoToAIButton" Content="ðŸ¤– AI Directory" Style="{StaticResource ActionButtonStyle}" Click="GoToAIButton_Click"/>
                            <Button Name="GoToCoreButton" Content="âš¡ Core Directory" Style="{StaticResource ActionButtonStyle}" Click="GoToCoreButton_Click"/>
                            <Button Name="GoToInterfaceButton" Content="ðŸ–¥ï¸ Interface Directory" Style="{StaticResource ActionButtonStyle}" Click="GoToInterfaceButton_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- File List and Content -->
            <Border Grid.Column="1" Background="#FF2D2D30" CornerRadius="8" Margin="5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Current Path and Actions -->
                    <Border Grid.Row="0" Background="#FF3E3E42" Padding="15,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Name="CurrentPathText" Text="Select a directory..." FontSize="14" FontWeight="Bold" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>

                            <WrapPanel Grid.Row="1" Orientation="Horizontal">
                                <Button Name="LintDirectoryButton" Content="ðŸ”§ Lint Directory" Style="{StaticResource ActionButtonStyle}" Click="LintDirectoryButton_Click"/>
                                <Button Name="FixE501DirectoryButton" Content="ðŸ“ Fix E501 (Dir)" Style="{StaticResource ActionButtonStyle}" Click="FixE501DirectoryButton_Click"/>
                                <Button Name="AnalyzeDirectoryButton" Content="ðŸ” Analyze Code" Style="{StaticResource ActionButtonStyle}" Click="AnalyzeDirectoryButton_Click"/>
                                <Button Name="BackupDirectoryButton" Content="ðŸ’¾ Backup" Style="{StaticResource ActionButtonStyle}" Click="BackupDirectoryButton_Click"/>
                            </WrapPanel>
                        </Grid>
                    </Border>

                    <!-- File List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15,10,15,10">
                        <ListBox Name="FileListBox" Background="Transparent" BorderThickness="0" SelectionMode="Extended" SelectionChanged="FileListBox_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource FileItemStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="14" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="12" Foreground="#FFCCCCCC" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Size}" FontSize="10" Foreground="#FFAAAAAA" VerticalAlignment="Center" Margin="10,0"/>
                                            <TextBlock Grid.Column="3" Text="{Binding Modified}" FontSize="10" Foreground="#FFAAAAAA" VerticalAlignment="Center" Margin="10,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <!-- File Actions -->
                    <Border Grid.Row="2" Background="#FF3E3E42" Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Name="SelectedFilesText" Text="No files selected" FontSize="12" Foreground="#FFCCCCCC" VerticalAlignment="Center"/>
                            </StackPanel>

                            <WrapPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Name="LintSelectedButton" Content="ðŸ”§ Lint Selected" Style="{StaticResource ActionButtonStyle}" Click="LintSelectedButton_Click"/>
                                <Button Name="FixE501SelectedButton" Content="ðŸ“ Fix E501" Style="{StaticResource ActionButtonStyle}" Click="FixE501SelectedButton_Click"/>
                                <Button Name="ViewFileButton" Content="ðŸ‘ï¸ View" Style="{StaticResource ActionButtonStyle}" Click="ViewFileButton_Click"/>
                            </WrapPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Analysis Panel -->
            <Border Grid.Column="2" Background="#FF2D2D30" CornerRadius="8" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Analysis &amp; Results" FontSize="16" FontWeight="Bold" Foreground="#FF00D4FF" Margin="15,15,15,10"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15,0,15,10">
                        <StackPanel Name="AnalysisPanel">
                            <Border Background="#FF3E3E42" CornerRadius="4" Padding="10" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Code Quality Metrics" FontSize="12" FontWeight="Bold" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="E501 Violations:" FontSize="11" Foreground="#FFAAAAAA"/>
                                        <TextBlock Grid.Column="1" Name="E501CountText" Text="0" FontSize="11" Foreground="#FFFF6B6B"/>
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Files Analyzed:" FontSize="11" Foreground="#FFAAAAAA"/>
                                        <TextBlock Grid.Column="1" Name="FilesAnalyzedText" Text="0" FontSize="11" Foreground="#FFCCCCCC"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Border Background="#FF3E3E42" CornerRadius="4" Padding="10" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Recent Operations" FontSize="12" FontWeight="Bold" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <ListBox Name="RecentOperationsList" Background="Transparent" BorderThickness="0" Foreground="#FFCCCCCC" FontSize="11" Height="150"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#FF3E3E42" CornerRadius="4" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="Agent Status" FontSize="12" FontWeight="Bold" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="E501 Agent:" FontSize="11" Foreground="#FFAAAAAA"/>
                                        <TextBlock Grid.Column="1" Name="AgentStatusText" Text="Ready" FontSize="11" Foreground="#FF00FF00"/>
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Last Operation:" FontSize="11" Foreground="#FFAAAAAA"/>
                                        <TextBlock Grid.Column="1" Name="LastOperationText" Text="None" FontSize="11" Foreground="#FFCCCCCC"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <Border Grid.Row="2" Background="#FF3E3E42" Padding="10" Margin="10">
                        <StackPanel>
                            <TextBlock Text="Batch Operations" FontSize="12" FontWeight="Bold" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                            <Button Name="BatchLintButton" Content="ðŸ”§ Batch Lint All" Style="{StaticResource ActionButtonStyle}" Click="BatchLintButton_Click"/>
                            <Button Name="BatchFixButton" Content="ðŸ“ Batch Fix E501" Style="{StaticResource ActionButtonStyle}" Click="BatchFixButton_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#FF2D2D30" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Name="StatusBarText" Text="Ready to explore files and run code quality operations..." Foreground="#FFCCCCCC" FontSize="12" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Name="ProgressText" Text="" Foreground="#FFAAAAAA" FontSize="11" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <ProgressBar Name="OperationProgressBar" Width="150" Height="15" Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
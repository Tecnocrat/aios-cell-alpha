<Window x:Class="AIOS.UI.AIOSMasterDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AIOS Master Demo - Complete Integration Showcase" 
        Height="1000" Width="1800"
        MinHeight="800" MinWidth="1400"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E"
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="AIOS" FontSize="32" FontWeight="Bold" 
                              Foreground="#FF00D4FF" Margin="0,0,20,0"/>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="Master Integration Demonstration" 
                                  FontSize="20" Foreground="#FFCCCCCC" FontWeight="SemiBold"/>
                        <TextBlock Text="HTML5 + C# + AI Services + Database Intelligence + AINLP Compiler" 
                                  FontSize="14" Foreground="#FF999999"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#FF28A745" CornerRadius="20" Padding="15,8" Margin="5,0">
                        <TextBlock Text="ðŸš€ ALL SYSTEMS ACTIVE" 
                                  Foreground="White" FontWeight="Bold" FontSize="12"/>
                    </Border>
                    <Button Content="ðŸ”„ Refresh" Name="RefreshSystemButton" 
                           Background="#FF007ACC" Foreground="White"
                           BorderThickness="0" Padding="15,8" Margin="5,0"
                           Click="RefreshSystemButton_Click"/>
                    <Button Content="âŒ Exit" Name="ExitButton"
                           Background="#FFDC3545" Foreground="White"
                           BorderThickness="0" Padding="15,8" Margin="5,0"
                           Click="ExitButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Demo Scenarios -->
            <Border Grid.Column="0" Background="#FF2D2D30" CornerRadius="8" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Border Grid.Row="0" Background="#FF3E3E42" Padding="15,12">
                        <TextBlock Text="ðŸŽ¯ Demonstration Scenarios" 
                                  FontSize="16" FontWeight="Bold" Foreground="#FF00D4FF"/>
                    </Border>
                    
                    <!-- Scenarios -->
                    <ScrollViewer Grid.Row="1" Padding="10" VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="DemoScenariosPanel">
                            <!-- Demo scenario buttons will be added here programmatically -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Center Panel - Results Display -->
            <Border Grid.Column="1" Background="#FF2D2D30" CornerRadius="8" Margin="5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Results Header -->
                    <Border Grid.Row="0" Background="#FF3E3E42" Padding="15,12">
                        <TextBlock Name="ResultsTitle" Text="ðŸ“Š System Overview" 
                                  FontSize="16" FontWeight="Bold" Foreground="#FF00D4FF"/>
                    </Border>
                    
                    <!-- Results Content -->
                    <ScrollViewer Grid.Row="1" Name="ResultsScrollViewer" 
                                 Padding="20" VerticalScrollBarVisibility="Auto">
                        <TextBlock Name="ResultsContent" 
                                  FontFamily="Consolas" FontSize="12" 
                                  Foreground="#FFCCCCCC" TextWrapping="Wrap"
                                  LineHeight="18"
                                  Text="Initializing AIOS Master Demo..."/>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Right Panel - Activity Log -->
            <Border Grid.Column="2" Background="#FF2D2D30" CornerRadius="8" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Log Header -->
                    <Border Grid.Row="0" Background="#FF3E3E42" Padding="15,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="ðŸ“‹ Activity Log" 
                                      FontSize="16" FontWeight="Bold" Foreground="#FF00D4FF"/>
                            
                            <Button Grid.Column="1" Content="ðŸ—‘ï¸ Clear" Name="ClearLogButton"
                                   Background="Transparent" Foreground="#FFCCCCCC"
                                   BorderThickness="0" Padding="8,4"
                                   Click="ClearLogButton_Click"/>
                        </Grid>
                    </Border>
                    
                    <!-- Activity Log -->
                    <ScrollViewer Grid.Row="1" Name="LogScrollViewer" 
                                 Padding="15" VerticalScrollBarVisibility="Auto">
                        <FlowDocumentScrollViewer>
                            <FlowDocument Name="LogDocument" FontFamily="Consolas" FontSize="11"
                                         Background="Transparent" Foreground="#FFCCCCCC">
                                <!-- Log entries will be added here -->
                            </FlowDocument>
                        </FlowDocumentScrollViewer>
                    </ScrollViewer>
                    
                    <!-- Log Stats -->
                    <Border Grid.Row="2" Background="#FF3E3E42" Padding="15,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Real-time system monitoring active" 
                                      FontSize="10" Foreground="#FF999999"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#FF28A745" Margin="0,0,5,0"/>
                                <TextBlock Text="Live" FontSize="10" Foreground="#FF28A745"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#FF2D2D30" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Name="StatusText" Text="Initializing AIOS Master Demo..." 
                          FontSize="12" Foreground="#FFCCCCCC" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Service Status Indicators -->
                    <Border Background="#FF28A745" CornerRadius="10" Padding="8,4" Margin="2,0">
                        <TextBlock Text="AI" FontSize="10" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <Border Background="#FF28A745" CornerRadius="10" Padding="8,4" Margin="2,0">
                        <TextBlock Text="DB" FontSize="10" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <Border Background="#FF28A745" CornerRadius="10" Padding="8,4" Margin="2,0">
                        <TextBlock Text="AINLP" FontSize="10" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <Border Background="#FF28A745" CornerRadius="10" Padding="8,4" Margin="2,0">
                        <TextBlock Text="WEB" FontSize="10" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    
                    <TextBlock Text="v2.0.0" FontSize="11" Foreground="#FF666666" 
                              VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
    
    <!-- Styles -->
    <Window.Resources>
        <Style x:Key="DemoButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF005A9B"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FF007ACC"/>
        </Style>
    </Window.Resources>
</Window>

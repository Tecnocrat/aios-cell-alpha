<Window x:Class="AIOS.UI.ChatInterfaceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AIOS.UI" mc:Ignorable="d"
    Title="AIOS Chat Interface - Agent Interaction Hub" Height="800" Width="1200"
    MinHeight="600" MinWidth="800" WindowStartupLocation="CenterScreen"
    Background="#FF1E1E1E" Icon="/AIOS.UI;component/Resources/ai-brain.ico">

    <Window.Resources>
        <Style x:Key="ChatMessageStyle" TargetType="Border">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="MaxWidth" Value="600"/>
        </Style>

        <Style x:Key="UserMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style x:Key="AgentMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="SystemMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Opacity" Value="0.8"/>
        </Style>

        <Style x:Key="AgentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E42"/>
                    <Setter Property="Foreground" Value="#FFFFFFFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ¤–" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="AIOS Agent Chat Interface" FontSize="20" FontWeight="Bold" Foreground="#FF00D4FF" VerticalAlignment="Center"/>
                    <TextBlock Name="ConnectionStatus" Text="ðŸ”— Connected" Foreground="#FF00FF00" FontSize="14" VerticalAlignment="Center" Margin="20,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Name="RefreshAgentsButton" Content="ðŸ”„ Refresh Agents" Background="#FF007ACC" Foreground="White" BorderThickness="0" FontSize="12" Padding="10,5" Margin="5,0" Click="RefreshAgentsButton_Click"/>
                    <Button Name="ClearChatButton" Content="ðŸ—‘ï¸ Clear Chat" Background="#FF3E3E42" Foreground="#FFCCCCCC" BorderThickness="0" FontSize="12" Padding="10,5" Margin="5,0" Click="ClearChatButton_Click"/>
                    <Button Name="SettingsButton" Content="âš™" Background="Transparent" Foreground="#FFCCCCCC" BorderThickness="0" FontSize="18" Width="35" Height="35" Margin="10,0,0,0" Click="SettingsButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Agent Panel -->
            <Border Grid.Column="0" Background="#FF2D2D30" CornerRadius="8" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Available Agents" FontSize="16" FontWeight="Bold" Foreground="#FF00D4FF" Margin="15,15,15,10"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15,0,15,10">
                        <WrapPanel Name="AgentButtonsPanel" Orientation="Vertical"/>
                    </ScrollViewer>

                    <Border Grid.Row="2" Background="#FF3E3E42" Padding="10" Margin="10">
                        <StackPanel>
                            <TextBlock Text="Quick Actions" FontSize="12" FontWeight="Bold" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                            <Button Name="LintCurrentFileButton" Content="ðŸ“ Lint Current File" Style="{StaticResource AgentButtonStyle}" Click="LintCurrentFileButton_Click" Margin="0,2"/>
                            <Button Name="FixE501Button" Content="ðŸ”§ Fix E501 Issues" Style="{StaticResource AgentButtonStyle}" Click="FixE501Button_Click" Margin="0,2"/>
                            <Button Name="AnalyzeCodeButton" Content="ðŸ” Analyze Code" Style="{StaticResource AgentButtonStyle}" Click="AnalyzeCodeButton_Click" Margin="0,2"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Chat Area -->
            <Border Grid.Column="1" Background="#FF2D2D30" CornerRadius="8" Margin="5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Chat Header -->
                    <Border Grid.Row="0" Background="#FF3E3E42" Padding="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Name="ChatHeaderText" Text="Select an agent to start chatting" FontSize="14" FontWeight="Bold" Foreground="#FFCCCCCC"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Name="ActiveAgentText" Text="" FontSize="12" Foreground="#FF00D4FF" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <Border Background="#FF007ACC" CornerRadius="10" Padding="5,2">
                                    <TextBlock Name="AgentStatusIndicator" Text="READY" Foreground="White" FontWeight="Bold" FontSize="10"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Messages -->
                    <ScrollViewer Grid.Row="1" Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto" Padding="15">
                        <StackPanel Name="ChatMessagesPanel"/>
                    </ScrollViewer>

                    <!-- Input Area -->
                    <Border Grid.Row="2" Background="#FF3E3E42" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="0" Name="ChatInputTextBox" TextWrapping="Wrap"
                                   AcceptsReturn="True" Height="60" VerticalScrollBarVisibility="Auto"
                                   Background="#FF1E1E1E" Foreground="#FFCCCCCC" BorderThickness="1"
                                   BorderBrush="#FF404040" Padding="10" Margin="0,0,0,10"
                                   FontSize="13" KeyDown="ChatInputTextBox_KeyDown"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <Button Name="AttachFileButton" Content="ðŸ“Ž Attach File" Background="Transparent" Foreground="#FFCCCCCC" BorderThickness="0" FontSize="12" Padding="5" Click="AttachFileButton_Click"/>
                                    <Button Name="VoiceInputButton" Content="ðŸŽ¤ Voice" Background="Transparent" Foreground="#FFCCCCCC" BorderThickness="0" FontSize="12" Padding="5" Margin="10,0,0,0" Click="VoiceInputButton_Click"/>
                                </StackPanel>

                                <Button Grid.Column="1" Name="SendMessageButton" Content="Send Message" Background="#FF007ACC" Foreground="White" BorderThickness="0" FontSize="12" Padding="15,5" Click="SendMessageButton_Click"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Context Panel -->
            <Border Grid.Column="2" Background="#FF2D2D30" CornerRadius="8" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Context &amp; History" FontSize="16" FontWeight="Bold" Foreground="#FF00D4FF" Margin="15,15,15,10"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15,0,15,15">
                        <StackPanel Name="ContextPanel">
                            <Border Background="#FF3E3E42" CornerRadius="4" Padding="10" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Current Session" FontSize="12" FontWeight="Bold" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <TextBlock Name="SessionInfoText" Text="No active session" FontSize="11" Foreground="#FFAAAAAA"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#FF3E3E42" CornerRadius="4" Padding="10" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Recent Conversations" FontSize="12" FontWeight="Bold" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <ListBox Name="RecentConversationsList" Background="Transparent" BorderThickness="0" Foreground="#FFCCCCCC" FontSize="11"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#FF3E3E42" CornerRadius="4" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="Agent Capabilities" FontSize="12" FontWeight="Bold" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <TextBlock Name="AgentCapabilitiesText" Text="Select an agent to view capabilities" FontSize="11" Foreground="#FFAAAAAA" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#FF2D2D30" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Name="StatusBarText" Text="Ready to interact with AI agents..." Foreground="#FFCCCCCC" FontSize="12" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Name="LastActivityText" Text="Last activity: None" Foreground="#FFAAAAAA" FontSize="11" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <ProgressBar Name="ActivityProgressBar" Width="100" Height="15" Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
<Window x:Class="AIOS.UI.HybridWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AIOS Hybrid Interface - Next Generation" 
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="AIOS" FontSize="24" FontWeight="Bold" 
                              Foreground="#FF00D4FF" Margin="0,0,10,0"/>
                    <TextBlock Text="Hybrid Interface - HTML5 + WPF Integration" 
                              FontSize="16" Foreground="#FFCCCCCC" 
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="#FF00D4FF" CornerRadius="12" Padding="8,4" Margin="5,0">
                        <TextBlock Text="HYBRID MODE" 
                                  Foreground="Black" FontWeight="Bold" FontSize="12"/>
                    </Border>
                    <Button Content="âš™" Background="Transparent" Foreground="#FFCCCCCC"
                           BorderThickness="0" FontSize="18" 
                           Width="35" Height="35" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content - WebView2 Container -->
        <Border Grid.Row="1" Background="#FF2D2D30" Margin="10">
            <Grid Name="MainContainer">
                <!-- WebView2 will be added here programmatically -->
                
                <!-- Fallback content -->
                <StackPanel Name="FallbackContent" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="Collapsed">
                    <TextBlock Text="ðŸŒ" FontSize="72" Foreground="#FF00D4FF" 
                              HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="Loading Hybrid Interface..." 
                              FontSize="18" Foreground="#FFCCCCCC" 
                              HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Initializing HTML5 + C# integration..." 
                              FontSize="14" Foreground="#FF888888" 
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF2D2D30" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Name="StatusText" 
                          Text="Initializing hybrid interface..." 
                          Foreground="#FFCCCCCC" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="HTML5 + C# + AI" 
                              Foreground="#FF00D4FF" VerticalAlignment="Center" 
                              Margin="0,0,15,0" FontWeight="Bold"/>
                    <TextBlock Text="AIOS v0.4.0 Hybrid" 
                              Foreground="#FF888888" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

				"${workspaceFolder}/interface/AIOS.UI/AIOS.UI.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile",
			"group": "build"
		},
		{
			"label": "build-cpp-core",
			"command": "cmake",
			"type": "shell",
			"args": [
				"--build",
				"${workspaceFolder}/core/build",
				"--config",
				"Debug"
			],
			"options": {
				"cwd": "${workspaceFolder}/core"
			},
			"problemMatcher": "$gcc",
			"group": "build"
		},
		{
			"label": "setup-cpp-build",
			"command": "cmake",
			"type": "shell",
			"args": [
				"-B",
				"build",
				"-S",
				".",
				"-DCMAKE_BUILD_TYPE=Debug"
			],
			"options": {
				"cwd": "${workspaceFolder}/core"
			},
			"problemMatcher": "$gcc",
			"group": "build"
		},
		{
			"label": "python-install-deps",
			"command": "pip",
			"type": "shell",
			"args": [
				"install",
				"-r",
				"requirements.txt"
			],
			"options": {
				"cwd": "${workspaceFolder}/ai"
			},
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "python-test-ai",
			"command": "pytest",
			"type": "shell",
			"args": [
				"-q",
				"${workspaceFolder}/ai/tests"
			],
			"options": {
				"cwd": "${workspaceFolder}/ai",
				"env": {
					"PYTHONPATH": "${workspaceFolder}/ai/src"
				}
			},
			"problemMatcher": [],
			"group": "test"
		},

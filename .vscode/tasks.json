			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/AIOS.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/interface/AIOS.UI/AIOS.UI.csproj"
			],
			"problemMatcher": "$msCompile",
			"isBackground": true
		},

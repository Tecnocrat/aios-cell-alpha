{
    // Python configuration with Black formatting
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.python"
    },
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length", "88"],
    // JSON Schema mappings for AIOS dendritic configuration files
    "json.schemas": [
        {
            "fileMatch": ["tachyonic/consciousness/config_registry.json"],
            "url": "./tachyonic/consciousness/schemas/config_registry.v1.json"
        }
    ],
    "cmake.sourceDirectory": "/workspace/core",
    // Exclude supercells from VSCode API surface - they're exposed via workspace folders
    // This minimizes indexing load while maintaining navigation through workspace roots
    "files.exclude": {
        "**/ai/**": true,
        "**/core/**": true,
        "**/interface/**": true,
        "**/docs/**": true,
        "**/runtime/**": true,
        "**/tachyonic/**": true,
        "**/evolution_lab/**": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/build/**": true,
        "**/bin/**": true,
        "**/obj/**": true,
        "**/.vs/**": true,
        "**/node_modules/**": true
    },
    // Specifically exclude from C/C++ extension indexing
    "C_Cpp.files.exclude": {
        "**/ai/**": true,
        "**/core/**": true,
        "**/interface/**": true,
        "**/docs/**": true,
        "**/runtime/**": true,
        "**/tachyonic/**": true,
        "**/evolution_lab/**": true
    },
    // Exclude from file watcher to prevent unnecessary scanning
    "files.watcherExclude": {
        "**/ai/**": true,
        "**/core/**": true,
        "**/interface/**": true,
        "**/docs/**": true,
        "**/runtime/**": true,
        "**/tachyonic/**": true,
        "**/evolution_lab/**": true,
        "**/.git/**": true,
        "**/node_modules/**": true
    },
    // Additional C/C++ performance settings
    "C_Cpp.intelliSenseCacheSize": "small",
    "C_Cpp.intelliSenseMemoryLimit": 1024,
    // Git configuration for correct author attribution
    "git.user.name": "Tecnocrat",
    "git.user.email": "jesussard@gmail.com"
}
